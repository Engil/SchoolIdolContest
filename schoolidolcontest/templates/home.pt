<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8"0>

    <title>Home</title>

  </head>
  <body>
      <form action="/__vote" method="post">
        <input type="submit" name="card1" value="${card1.name.split(' ')[-1]} is best"/>
        <input type="hidden" name="card1_id" value="${card1.id}"/>
        <input type="submit" name="card2" value="${card2.name.split(' ')[-1]} is best"/>
        <input type="hidden" name="card2_id" value="${card2.id}"/>
        </form>
    <div id="name">
      <p>${card1.id}</p>
      <p>${card1.name}</p>
      <img src="${card1.card_url if card1.card_url else card1.card_idolized_url}" width=100></img>
      <p>${card2.id}</p>
      <p>${card2.name}</p>
      <img src="${card2.card_url if card2.card_url else card2.card_idolized_url}" width=100></img>
    </div>
    <div>
      </div>
    </body>
  </html>
